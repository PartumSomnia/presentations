\mode<presentation>

\definecolor{bonnblue}{RGB}{0, 70, 255}
\definecolor{bonngray}{RGB}{255,228,181}

\setbeamercolor*{normal text}{fg=black,bg=white} %The !whole text | the whole backgoround (all slides)
\setbeamercolor*{alerted text}{fg=black}%nothing
\setbeamercolor*{example text}{fg=black}
\setbeamercolor*{structure}{fg=black}%bulletpoints and text in outline

\setbeamerfont{alerted text}{series=\bfseries}

\setbeamercolor*{palette primary}{fg=white,bg=bonnblue}%\nothing
\setbeamercolor*{palette secondary}{fg=white,bg=black!70}%line on top.
\setbeamercolor*{palette tertiary}{fg=black,bg=gray!60}%nothing/nothing
\setbeamercolor*{palette quaternary}{fg=black,bg=bonngray}

\setbeamercolor{sidebar}{bg=black!20}%nothing

\setbeamercolor*{item projected}{fg=white,bg=orange}%outline boxes

\setbeamercolor{block title}{fg=white,bg=bonnblue}% \ box upline
\setbeamercolor{block body}{fg=black,bg=bonngray}%text within box
\setbeamercolor{block title alerted}{fg=black,bg=red!60!white}%nothing\
\setbeamercolor{block body alerted}{fg=black,bg=red!20!white}%nothing\
\setbeamercolor{block title example}{fg=black,bg=green!60!white}%text in the example box
\setbeamercolor{block body example}{fg=black,bg=green!20!white}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor{navigation symbols dimmed}{fg=gray}
\setbeamercolor{navigation symbols}{fg=black}
\setbeamercolor{title}{fg=black,bg=orange!30}

\mode
<all>